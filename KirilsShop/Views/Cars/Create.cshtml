@model KirilsShop.Models.ViewModels.DropdownVM
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
</head>


@{
    ViewData["Title"] = "Create";
}

<h3 class="text-center my-5">Add new car to sell list</h3>


<section class="bg-custom-gray my-5">
  
        <div class="col-md-4 container py-5">
            <form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="Cars">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex justify-content-md-between mb-3">
                    <div class="mx-4">
                    <div class="form-group">
                        <label asp-for="Brand" class="control-label"></label>
                        <select asp-for="BrandId" class="form-control" asp-items="ViewBag.CarBrands"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model" class="control-label"></label>
                        <select asp-for="ModelId" class="form-control" asp-items="ViewBag.CarModels"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="YOP" class="control-label"></label>
                        <select asp-for="YOPId" class="form-control" asp-items="ViewBag.CarYops"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Color" class="control-label"></label>
                        <select asp-for="ColorId" class="form-control" asp-items="ViewBag.CarColor"></select>
                    </div>

                    <div class="form-group">

                        <label asp-for="Perfomance" class="control-label"></label>
                        
                        <div class="input-group">
                            <input asp-for="Perfomance" class="form-control" id="floatingInput" />
                            
                            <span class="input-group-text" id="basic-addon2">Hp</span>
                            </div>
                        <span asp-validation-for="@Model.Perfomance" class="text-danger"></span>
                       
                    </div>

                    <div class="form-group">
                        <label asp-for="Mileage" class="control-label"></label>
                       
                        <div class="input-group">
                            <input asp-for="Mileage" class="form-control" />
                           
                            <span class="input-group-text" id="basic-addon2">Km</span>
                        </div>
                        <span asp-validation-for="Mileage" class="text-danger"></span>
                        
                    </div>
                  
                    </div>
                    <div>
                    <div class="form-group">
                        <label asp-for="Fuel" class="control-label"></label>
                        <select asp-for="FuelId" class="form-control" asp-items="ViewBag.CarFuel"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Body" class="control-label"></label>
                        <select asp-for="BodyId" class="form-control" asp-items="ViewBag.CarBodys"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        
                        <div class="input-group">
                            <input asp-for="Price" class="form-control" />
                           
                            <span class="input-group-text" id="basic-addon2">Kč</span>
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VIN" class="control-label"></label>
                        <input asp-for="VIN" class="form-control" />
                        <span asp-validation-for="VIN" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Origin" class="control-label"></label>
                        <select asp-for="OriginId" class="form-control" asp-items="ViewBag.CarOrigin"></select>
                    </div>

                    </div>
                </div>

             

                <div class="form-group">
                    <label asp-for="CoverPhoto" class="control-label"></label>
                    <div class="custom-file">
                        <input asp-for="CoverPhoto" class="custom-file-input" id="customFile">
                        <label class="custom-file-label" for="customFile"></label>
                    </div>
                    <span asp-validation-for="CoverPhoto" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GalleryFiles" class="control-label"></label>
                    <div class="custom-file">
                        <input asp-for="GalleryFiles" class="custom-file-input" id="customFile">
                        <label class="custom-file-label" for="customFile"></label>
                    </div>
                    <span asp-validation-for="GalleryFiles" class="text-danger"></span>
                </div>

            <div class="d-flex justify-content-md-between">
                <div class="form-group my-5">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div class=" my-5">
                    <a class="link-secondary" asp-action="Index">Back to List</a>

                </div>
                </div>
                
            </form>
        </div>
  
</section>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
